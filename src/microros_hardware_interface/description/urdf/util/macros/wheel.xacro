<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="wheel" params="name x y z front side">
    
        <link name="${name}_wheel">

            <!-- COLLISION -->
            <collision>
            <origin xyz="0 0 0" rpy="${side * -PI/2} 0 0"/>
                
            <geometry>
                <!-- <mesh filename="file://$(find microros_hardware_interface)/description/urdf/assets/wheel/Wheel.stl"/> -->
                <sphere radius="${wheel_radius}" />
            </geometry>

            <surface>
                <friction>
                    <ode>
                    <mu value="${friction}"/>
                    <mu2 value="${friction}"/>
                    <!-- <min_depth value="${min_depth}"/> -->
                    <!-- <slip1 value="1"/>
                    <slip2 value="1"/> -->
                    </ode>

                    <torsional>
                    <coefficient>0.0</coefficient>
                    </torsional>
                </friction>

                <contact>
                    <ode>
                    <min_depth value="${min_depth}"/>
                    <!-- <kp>1e15</kp>
                    <kd>1e13</kd> -->
                    </ode>
                </contact>

                </surface>
            </collision>
    
            <!-- VISIUAL -->
            <visual>
                <origin xyz="0 0 0" rpy="${side * -PI/2} 0 0"/>

                <geometry>
                    <mesh filename="file://$(find microros_hardware_interface)/description/urdf/assets/wheel/Wheel.obj"/>
                    <!-- <sphere radius="${wheel_radius}" /> -->
                </geometry>

                <!-- <material name="black"/> -->
            </visual>
    
            <!-- INERTIAL -->
            <inertial>
                <origin xyz="0 0 0" rpy="${PI/2} 0 ${PI/2}"/>
                <mass value="${wheel_mass}"/>
                <inertia
                    ixx="0.000270" ixy="0.0" ixz="0.0"
                    iyy="0.000270" iyz="0.0"
                    izz="0.000426"/>
            </inertial>
        </link>

        <gazebo reference="${name}_wheel">
            <material>Gazebo/Black</material>
            <mu1 value="1"/>
            <mu2 value="1"/>
        </gazebo>

        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="${prefix}chassis_link"/>
            <child link="${name}_wheel"/>
            <origin xyz="${front * .120} ${side * .129} -.0199" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit effort="1000.0" velocity="100.0"/>
            <dynamics damping="${damping}"/>

            <!-- <mimic joint="${prefix}virtual_rear_wheel_joint" multiplier="1.0" offset="0.0"/> -->
        </joint>

    </xacro:macro>

</robot>
